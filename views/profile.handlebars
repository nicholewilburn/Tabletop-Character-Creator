<div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
        <p>
          <strong>{{name}}</strong> <small>{{email}}</small>
        </p>
      </div>
    </div>
  </article>
</div>

<div class="row">
  <div class="col-auto">
    <h2>My characters:</h2>
  </div>
</div>

{{#each character as |character|}}
<div class="row mb-4 box">
  <article class="media">
    <div class="media-left">
      <figure class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
      </figure>
    </div>
    <div class="media-content">
      <div class="content col-md-5">
        <h2>
          <a href="/character/{{character.id}}">{{character.name}}</a>
        </h2>
        <p>{{character.gender}}</p>
        <p>{{character.race}}</p>
        <p>{{character.class}}</p>

        <div class="col-md-7">
            <p>{{character.description}}</p>
            {{!-- <p>{{character.background}}</p>
            <p>{{character.look}}</p>
            <p>{{character.personality}}</p> --}}
        </div>

        {{!-- <div class="character-stats">
          <p>{{character.strength}}</p>
          <p>{{character.dexterity}}</p>
          <p>{{character.constitution}}</p>
          <p>{{character.intelligence}}</p>
          <p>{{character.wisdom}}</p>
          <p>{{character.charisma}}</p>
        </div> --}}

        <p>Created by {{character.user.name}} on {{format_date character.date_created}}</p>
      </div>
    </div>
  </article>
</div>
{{/each}}

<a href="/create">
<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <h2>Create New</h2>
          <br>
          <i class="fa-solid fa-plus"></i>
        </p>
      </div>
    </div>
  </article>
</div>
</a>
