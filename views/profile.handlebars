<div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
        <p>
          <strong>{{name}}</strong> <small>{{email}}</small>
        </p>
      </div>
    </div>
  </article>
</div>

<div class="row">
  <div class="col-auto">
    <h2>My characters:</h2>
  </div>
</div>

{{#each character as |character|}}
<div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
        <p>
          <strong>{{name}}</strong> <small>{{gender}}</small>
          <br>
          {{background}}
        </p>
      </div>
    </div>
  </article>
</div>
{{/each}}

<a href="/create">
<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <h2>Create New</h2>
          <br>
          <i class="fa-solid fa-plus"></i>
        </p>
      </div>
    </div>
  </article>
</div>
</a>