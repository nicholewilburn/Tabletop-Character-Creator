
<!-- START FORM -->
<div class="form">

<div class="columns is-centered">

<!-- STATS -->
<div class="column is-narrow">
<div class="box">

<div class="field">
    <label class="label">Strength</label>
    <div class="control has-addons">
        <input id="strField" class="input" type="text" placeholder="ROLL ME">
        <button id="strBtn" class="button is-danger"><i class="fa-solid fa-dice"></i></button>
    </div>
</div>

<div class="field">
    <label class="label">Dexterity</label>
    <div class="control">
        <input id="dexField" class="input" type="text" placeholder="ROLL ME">
        <button id="dexBtn" class="button is-danger"><i class="fa-solid fa-dice"></i></button>
    </div>
</div>

<div class="field">
    <label class="label">Consitution</label>
    <div class="control">
        <input id="conField" class="input" type="text" placeholder="ROLL ME">
        <button id="conBtn" class="button is-danger"><i class="fa-solid fa-dice"></i></button>
    </div>
</div>

<div class="field">
    <label class="label">Intelligence</label>
    <div class="control">
        <input id="intField" class="input" type="text" placeholder="ROLL ME">
        <button id="intBtn" class="button is-danger"><i class="fa-solid fa-dice"></i></button>
    </div>
</div>

<div class="field">
    <label class="label">Wisdom</label>
    <div class="control">
        <input id="wisField" class="input" type="text" placeholder="ROLL ME">
        <button id="wisBtn" class="button is-danger"><i class="fa-solid fa-dice"></i></button>
    </div>
</div>

<div class="field">
    <label class="label">Charisma</label>
    <div class="control">
        <input id="chaField" class="input" type="text" placeholder="ROLL ME">
        <button id="strBtn" class="button is-danger"><i class="fa-solid fa-dice"></i></button>
    </div>
</div>

</div>
</div>

<!-- BASIC -->
<div class="column is-half">
<div class="box">

<div class="field">
    <label class="label">Name</label>
    <div class="control">
        <input class="input" type="text" placeholder="Enter character name">
    </div>
</div>

<div class="columns">
    <div class="field column is-horizontal">
        <label class="label">Gender</label>
        <div class="control">
            <div class="select">
                <select>
                    <option>Male</option>
                    <option>Female</option>
                    <option>Non-Binary</option>
                </select>
            </div>
        </div>
    </div>

    <div class="field column is-horizontal">
        <label class="label">Race</label>
        <div class="control">
            <div class="select">
                <select>
                    <option>Human</option>
                    <option>Elf</option>
                    <option>Dwarf</option>
                </select>
            </div>
        </div>
    </div>

    <div class="field column is-horizontal">
        <label class="label">Class</label>
        <div class="control">
            <div class="select">
                <select>
                    <option>Cleric</option>
                    <option>Fighter</option>
                    <option>Rogue</option>
                </select>
            </div>
        </div>
    </div>
</div>

<div class="field">
    <label class="label">Description</label>
    <div class="control">
        <textarea class="textarea" placeholder="Enter character description"></textarea>
    </div>
</div>

</div>
</div>

<!--end columns -->
</div>

<!-- SUBMIT -->
<div class="columns is-centered">
<div class="column is-half">
<div class="box has-text-centered">

<input class="button is-success" type="submit" value="Save Character">

</div>
</div>
</div>

</div>
<!-- END FORM -->

<script src="../public/js/character.js"></script>
<script src="../public/js/stats.js"></script>