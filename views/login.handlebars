<header>
    <h1 class="title is-1 has-text-centered">Tabletop Character Creator</h1>
</header>

<form class="columns is-flex-wrap-wrap login-form">
    <div class="column field is-full is-justify-content-center is-flex">
        <div class="field column is-one-third">
            <p class="control has-icons-left has-icons-right">
                <input class="input" id="email-login" type="email" placeholder="Email">
                <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                </span>
            </p>
        </div>
    </div>

    <div class="column field is-full is-justify-content-center is-flex">
        <div class="field column is-one-third">
            <p class="control has-icons-left">
                <input class="input" id="password-login" type="password" placeholder="Password">
                <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                </span>
            </p>
        </div>
    </div>

    <div class="buttons column is-two-thirds is-align-self-center is-flex is-justify-content-center">
        <button class="button is-success">
            Login
        </button>
    </div>
</form>

<h2 class="title is-2 has-text-centered">No account? Create One Here:</h2>
<form class="columns is-flex-wrap-wrap signup-form">
    <div class="column field is-full is-justify-content-center is-flex">
        <div class="field column is-one-third">
            <p class="control has-icons-left has-icons-right">
                <input class="input" id="email-signup" type="email" placeholder="Email">
                <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                </span>
            </p>
        </div>
    </div>

    <div class="column field is-full is-justify-content-center is-flex">
        <div class="field column is-one-third">
            <p class="control has-icons-left">
                <input class="input" id="password-signup" type="password" placeholder="Password">
                <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                </span>
            </p>
        </div>
    </div>

    <div class="buttons column is-two-thirds is-align-self-center is-flex is-justify-content-center">
        <button class="button is-success">
            Create Account
        </button>
    </div>
</form>

<script src="/js/login.js"></script>